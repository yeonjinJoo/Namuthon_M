<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="20dp" >
    <ImageView
        android:id="@+id/recycler1_img"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/test_image"
        android:background="@drawable/img_round"
        android:clipToOutline="true"/>

    <TextView
        android:id="@+id/recycler1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/recycler1_img"
        app:layout_constraintStart_toStartOf="@+id/recycler1_img"
        tools:text="지원사업명"
        android:textSize="15sp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/recycler1_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/recycler1_title"
        app:layout_constraintStart_toStartOf="@+id/recycler1_title"
        tools:text="yyyy-mm-dd ~ yyyy-mm-dd"
        android:textSize="11sp"
        android:layout_marginTop="2dp"
        android:textColor="#CBCBCB"/>


</androidx.constraintlayout.widget.ConstraintLayout>